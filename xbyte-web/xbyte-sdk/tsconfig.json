{
    "compilerOptions": {
        // Environment setup & latest features
        "target": "ES2020",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleDetection": "force",
        "jsx": "react-jsx",
        "allowJs": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
