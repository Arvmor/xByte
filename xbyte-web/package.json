{
    "name": "xbyte-web",
    "private": true,
    "workspaces": [
        "spotify-demo",
        "xbyte-sdk"
    ],
    "scripts": {
        "dev": "bun run --filter spotify-web dev",
        "build": "bun run --filter xbyte-sdk build && bun run --filter spotify-web build",
        "build:sdk": "bun run --filter xbyte-sdk build",
        "lint": "bun run --filter xbyte-sdk lint && bun run --filter spotify-web lint",
        "lint:fix": "bun run --filter xbyte-sdk lint:fix && bun run --filter spotify-web lint:fix",
        "format": "bun run --filter xbyte-sdk format && bun run --filter spotify-web format",
        "format:check": "bun run --filter xbyte-sdk format:check && bun run --filter spotify-web format:check",
        "format:sdk": "bun run --filter xbyte-sdk format",
        "format:check:sdk": "bun run --filter xbyte-sdk format:check"
    },
    "dependencies": {
        "@privy-io/react-auth": "^3.9.0",
        "@radix-ui/react-slider": "^1.3.6",
        "@radix-ui/react-slot": "^1.2.4",
        "@solana-program/system": "^0.10.0",
        "@solana-program/token": "^0.9.0",
        "@solana/kit": "^5.1.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.562.0",
        "next": "16.1.0",
        "next-themes": "^0.4.6",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "tailwind-merge": "^3.4.0",
        "xbyte-sdk": "workspace:*"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "tailwindcss": "^4.1.18",
        "tw-animate-css": "^1.4.0",
        "@types/node": "^25.0.3",
        "typescript": "^5.9.3",
        "oxfmt": "^0.18.0",
        "oxlint": "^1.33.0"
    },
    "packageManager": "bun@1.3.4",
    "engines": {
        "bun": ">=1.3.4"
    }
}
